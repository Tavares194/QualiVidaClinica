  <link href="https://fonts.googleapis.com/css2?family=Alegreya:wght@400;500;600;700&family=Arvo:wght@400;700&family=Inconsolata:wght@400;700&display=swap" rel="stylesheet" />

  <style>
    html {
      direction: <%=dir %>;
    }
  </style>
</head>

<body>
  <header class="p-3 text-bg-light navbar-static-top w-100">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none pe-4">
          <img src="../images/header-logo.svg" alt="logo" style="width: 150px;">
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 text-secondary">
              <%= __("common.home") %>
            </a></li>
          <li><a href="/especialidade" class="nav-link px-2 text-black">
              <%= __("common.specialties") %>
            </a></li>
          <li><a href="#" class="nav-link px-2 text-black">
              <%= __("common.our-services") %>
            </a></li>
          <li><a href="#" class="nav-link px-2 text-black">
              <%= __("common.our-staff") %>
            </a></li>
          <li><a href="#" class="nav-link px-2 text-black">
              <%= __("common.about-us") %>
            </a></li>
        </ul>

        <div class="text-end">
          <a href="/login" class="text-decoration-none">
            <button type="button" class="btn btn-outline-dark me-2">
              <%= __("common.login") %>
            </button>
          </a>
          <a href="/cadastro" class="ext-decoration-none"">
                        <button type=" button" class="btn btn-primary">
            <%= __("common.signup") %></button>
          </a>
        </div>
      </div>
    </div>
  </header>

  <main class="flex-grow-1 d-flex justify-content-center align-items-center">
    <div class="background-color"></div>
    <div class="login d-flex align-items-center justify-content-center w-100">
      <form action="/login" method="POST" class="bg-white p-4 col-9 col-sm-7 col-md-5 col-lg-4 col-xxl-3" id="login-form">
        <div class="form-group mb-4 mt-2 d-flex justify-content-center align-items-center">
          <img src="../images/logo.svg" alt="logo" class="login-logo-img">
        </div>


        <div class="form-floating mb-3">
          <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= typeof email !== 'undefined' ? email : '' %>">
          <label for="email">
            <%= __("login.email") %>
          </label>
        </div>

        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="senha" name="senha" placeholder="password">
          <label for="senha">
            <%= __("login.password") %>
          </label>
        </div>

        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="remember_me" name="remember_me">
          <label class="form-check-label" for="remember_me">
            <%= __("login.remember-me") %>
          </label>
        </div>


        <div class="error-message text-sm text-danger text-center mt-4">
          <%= typeof error !=='undefined' ? error : '' %>
        </div>

        <% if (typeof successMessage !=='undefined' ) { %>
        <div class="error-message text-sm text-success text-center mt-4">
          <%= successMessage %>
        </div>
        <% } %>

        <button type="submit" class="btn text-white w-100 mt-4">
          <%= __("login.login") %>
        </button>
      </form>
    </div>
  </main>

  <footer class="p-5">
    <div class="row">
      <div class="col-6 col-md-2 mb-3">
        <h5>Section</h5>
        <ul class="nav flex-column">
          <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Home</a></li>
